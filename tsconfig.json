{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",

        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,

        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*"
            ]
        },
        "lib": [
          "DOM",
          "DOM.Iterable",
          "ES5",
          "ES2015",
          "ES2016",
          "ES2017",
          "ESNext.bigint"
        ],
        "declaration": true
    },
    "include": [
        "src/**/*"
    ]
}
